{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend API for Right Tech Centre",
  "main": "./src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "check-imports": "node --check src/server.js",
    "audit:fix": "npm audit fix --force",
    "healthcheck": "node -e \"import('./src/server.js').then(() => process.exit(0)).catch(() => process.exit(1))\"",
    "postinstall": "cd ../frontend && npm install && npm run build"
  },
  "keywords": [
    "api",
    "backend",
    "express",
    "mongodb"
  ],
  "author": "Right Tech Centre",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/linolazarous/right-tech-centreinc.git"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "mongoose": "^7.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
