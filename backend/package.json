{
  "name": "right-tech-backend",
  "version": "1.0.0",
  "description": "Backend for Right Tech Centre - eLearning Platform",
  "main": "src/app.js",
  "type": "module",
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "scripts": {
    "start": "NODE_ENV=production node --enable-source-maps src/app.js",
    "dev": "NODE_ENV=development nodemon --watch './**/*.js' src/app.js",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watchAll",
    "test:ci": "NODE_ENV=test jest --ci --runInBand --detectOpenHandles",
    "lint": "eslint --fix '**/*.{js,jsx}' --ignore-pattern node_modules/",
    "format": "prettier --write '**/*.{js,jsx,json,md}'",
    "security-check": "npm audit --production --audit-level=moderate",
    "docker:build": "docker build -t right-tech-backend .",
    "docker:run": "docker run -p 8080:8080 right-tech-backend"
  },
  "dependencies": {
    "express": "4.19.2",
    "mongoose": "8.3.4",
    "stripe": "14.7.0",
    "jsonwebtoken": "9.0.2",
    "winston": "3.13.0",
    "aws-sdk": "2.1565.0",
    "web3": "4.4.0",
    "zoomus": "2.1.0",
    "cors": "2.8.5",
    "helmet": "7.1.0",
    "dotenv": "16.4.1",
    "bcryptjs": "2.4.3",
    "rate-limit-redis": "3.0.0",
    "compression": "1.7.4",
    "express-rate-limit": "7.1.3",
    "express-mongo-sanitize": "2.2.0",
    "hpp": "0.2.3",
    "express-validator": "7.0.1",
    "http-status-codes": "2.2.0",
    "node-cache": "5.1.2",
    "uuid": "9.0.1",
    "axios": "1.6.7",
    "firebase-admin": "11.11.1",
    "mongoose-paginate-v2": "1.7.1",
    "winston-daily-rotate-file": "4.7.1"
  },
  "devDependencies": {
    "jest": "29.7.0",
    "nodemon": "3.1.0",
    "eslint": "8.57.0",
    "prettier": "3.2.5",
    "supertest": "6.3.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-security": "1.7.1",
    "jest-extended": "4.0.1",
    "faker": "7.6.0",
    "nyc": "15.1.0",
    "sinon": "17.0.1",
    "swagger-autogen": "2.23.5",
    "swagger-ui-express": "5.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/config/"
    ],
    "setupFilesAfterEnv": ["jest-extended/all"]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:security/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "jest": true,
      "es2022": true
    },
    "rules": {
      "security/detect-object-injection": "off",
      "no-console": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
