{
  "name": "right-tech-backend",
  "version": "1.0.0",
  "description": "Backend for Right Tech Centre - eLearning Platform",
  "main": "src/server.js",
  "type": "module",
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "scripts": {
    "start": "NODE_ENV=production node --enable-source-maps src/server.js",
    "dev": "NODE_ENV=development nodemon --watch './**/*.js' src/server.js",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watchAll",
    "test:ci": "NODE_ENV=test jest --ci --runInBand --detectOpenHandles",
    "lint": "eslint --fix '**/*.{js,jsx}' --ignore-pattern node_modules/",
    "format": "prettier --write '**/*.{js,jsx,json,md}'",
    "security-check": "npm audit --production --audit-level=moderate"
  },
  "dependencies": {
    "express": "4.19.2",
    "mongoose": "8.3.4",
    "cors": "2.8.5",
    "helmet": "7.1.0",
    "dotenv": "16.4.1",
    "bcryptjs": "2.4.3",
    "compression": "1.7.4",
    "express-rate-limit": "7.1.3",
    "express-validator": "7.0.1",
    "morgan": "1.10.0",
    "connect-timeout": "1.9.0"
  },
  "devDependencies": {
    "jest": "29.7.0",
    "nodemon": "3.1.0",
    "eslint": "8.57.0",
    "prettier": "3.2.5",
    "supertest": "6.3.4"
  }
}
